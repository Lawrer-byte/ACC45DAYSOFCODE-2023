#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t,a,b,x,y;
	cin>>t;
	while(t--)
	{
	   cin>>a>>b>>x>>y;//a present ,b req temp,x hot(+)
	                    //,y cold(-)
	   if(a==b)
	   cout<<"YES"<<endl;
	   else if(a<b)
	   {
	       if((a+x)>=(b))
	       cout<<"YES"<<endl;
	       else
	       cout<<"NO"<<endl;
	   }
	   else // a>b
	   {
	       if((a-y)<=(b))
	       cout<<"YES"<<endl;
	       else
	       cout<<"NO"<<endl;
	   }
	   
	}
	return 0;
}
